license=('GPL3')
depends=()
source=("https://dl.opendesktop.org/api/files/downloadfile/id/1521578697/s/65ef1e76484a2bb3d86e4cb501e3ad60/t/1522203329/u/366148/Ant.tar")
sha256sums=('d6517a2aaa476a53025021cf58776bb4bdbb3c247d8403a80c92658a977019d4')

package(){
	cd "$srcdir"
	find */ -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/themes/{}" \;
}
